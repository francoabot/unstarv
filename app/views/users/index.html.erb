<% provide(:title, 'All users') %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Logged in as <%= current_user.email %> | <%= render 'shared/stats' %> | Your score is : <%= 0 || current_user.score %> | You belong to x groups | X invites pending</h3>
  </div>
  <div class="panel-body">
     
       
      
  </div>
  
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Score</th>
      <th>Expertise</th>
       
      <th>Vote</th>
      <th>Primary Group</th>
      <th>Country</th>
      <th>State</th>
      <th>Joined</th>
      <th>Artist ?</th>
      <th>Message user</th>
     
    </tr>
  </thead>
  <tbody>
        
        <% $i = 1 %>
      
       <% while $i <= @users.count  do %>
       <% @users.each do |user| %>
         <% if user.deleted_at == nil %>
      <tr>
       <td><%= $i %></td>
      <td><%= gravatar_for user %><%=link_to user.username.to_s, user %></td>
      <td><%= user.score %></td>
      <td><%= user.profession %></td>
     
      <td>Vote me</td>
      <td>Artist or not</td>
      <td><%= user.country %></td>
      <td><%= user.state %></td>
      <td><%= time_ago_in_words(user.created_at) %> ago</td>
      <td><%= user.artist %></td>
       <td>  <% unless current_user == user %>
        <%= link_to 'Send message', new_message_path(to: user.id), class: 'btn btn-default btn-sm' %>
        <% end %></td>
      
        <% $i +=1 %>
        <%end%>
    
      </tr>
      <%end%>
      <%end%>
      </tbody>

      <br/>
      <br/>
      <br>
      <br>
       
   
  




